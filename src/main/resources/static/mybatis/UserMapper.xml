<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lxn.community.community.mapper.UserMapper">

    <insert id="insertUser">
        insert into user(account_id,name,token,gmt_create,gmt_modified,avatar_url)
        values (#{accountId},#{name},#{token},#{gmtCreate},#{gmtModified},#{avatarUrl})
    </insert>

    <select id="selectToken" resultType="com.lxn.community.community.bean.User">
        select  * from user where token=#{token}
    </select>

    <select id="findById" resultType="com.lxn.community.community.bean.User">
        select *from user where id=#{id}
    </select>
</mapper>